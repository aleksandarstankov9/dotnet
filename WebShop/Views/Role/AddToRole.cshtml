@{
    ViewData["Title"] = "Add to role";
}

<h1>Add to role</h1>

<div class="row mt-3">
    <div class="col-md-7">
        <form asp-action="AddToRole">
            <div class="form-group">
                <select asp-items="ViewBag.Users" name="user" class="form-control">
                    <option value="0">Choose a user</option>
                </select>
            </div>
            <div class="form-group">
                <select asp-items="ViewBag.Roles" name="role" class="form-control">
                    <option value="0">Choose a role</option>
                </select>
            </div>

            <button class="btn btn-primary">Add to role</button>
        </form>
    </div>
</div>

<div class="row mt-3">
    <div class="col-md-7">
        <span>@ViewBag.Message</span>
    </div>
</div>

